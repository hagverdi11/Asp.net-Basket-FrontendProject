@model AccessoriesVM

<div class="product-cards">
    <div class="row">
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-4 col-12">
                <div class="product-card">
                    <div class="img">
                        <img src="~/assets/images/home/@item.ProductImage" alt="" />

                        <div class="price">$@item.Price

                         <form asp-controller="Home" asp-action="AddBasket" asp-route-id="@item.Id" method="post"> <button type="submit" class="btn btn-primary">Add Card </button></form>
                       
                        </div>
                    </div>
                    <div class="title">
                        <div class="cart">
                            <i class="fa-solid fa-cart-shopping"></i>
                        </div>
                        <h6>@item.Name</h6>
                        <ul>
                            <li><i class="fa-solid fa-star"></i></li>
                            <li><i class="fa-solid fa-star"></i></li>
                            <li><i class="fa-solid fa-star"></i></li>
                            <li><i class="fa-solid fa-star"></i></li>
                            <li><i class="fa-solid fa-star"></i></li>
                        </ul>
                    </div>
                    <div class="icons">
                        <div class="heart">
                            <i class="fa-solid fa-heart"></i>
                        </div>
                        <div class="eye">
                            <i class="fa-solid fa-eye"></i>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="show-more d-flex justify-content-center my-2 mb-2 w-100">
            <button class="btn btn-primary">Show more ...</button>
        </div>
    </div>
    <div class="row">
        <div class="pagination">
            <a href="#" class="blocks">&laquo;</a>
            <a href="#" class="blocks active">1</a>
            <a href="#" class="blocks">2</a>
            <a href="#" class="blocks">3</a>
            <a href="#" class="blocks">4</a>
            <a href="#" class="blocks">5</a>

            <a href="#" class="blocks">&raquo;</a>
        </div>
    </div>
</div>